<%= form_for [:patient, @prescription] do |f| %>
  <%= f.label :medication %>
  <%= f.select :medication, @medications, include_blank: "Please choose a medication..." %>

  <%= f.label :dosage %>
  <%= f.text_field :dosage %>

  <%= f.label :schedule %>
  <%= f.text_field :schedule %>

  <%= f.label :start_date %>
  <%= f.text_field :start_date, class: "cal-date"  %>

  <%= f.label :end_date %>
  <%= f.text_field :end_date, class: "cal-date" %>

  <%= f.submit %>
<% end %>